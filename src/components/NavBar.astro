---
const pathname = Astro.url.pathname;

const items = [
  { href: "/", label: "Inicio" },
  { href: "/servicios", label: "Servicios" },
  { href: "/nuestro-hogar", label: "Nuestro hogar" },
  { href: "/equipo", label: "Equipo" },
  { href: "/novedades", label: "Novedades" },
  { href: "/faq", label: "FAQ" },
  { href: "/contacto", label: "Contacto" },
];

const isActive = (href: string) =>
  href === "/" ? pathname === "/" : pathname.startsWith(href);
---

<header class="sticky top-0 z-50 border-b border-slate-200/70 bg-white/85 backdrop-blur">
  <div class="container flex items-center justify-between gap-4 py-3">
    <a href="/" class="flex items-center gap-2">
      <span class="grid h-10 w-10 place-items-center rounded-xl bg-[#2F5D50] text-white font-bold shadow-sm">
        H
      </span>
      <div class="leading-tight">
        <p class="font-extrabold text-slate-900 tracking-tight">Hogar</p>
        <p class="text-xs text-slate-500">Atenci√≥n integral</p>
      </div>
    </a>

    <!-- Desktop nav -->
    <nav class="hidden lg:flex items-center gap-1">
      {items.map((item) => (
        <a
          href={item.href}
          class:list={["nav-link", isActive(item.href) && "nav-link-active"]}
        >
          {item.label}
        </a>
      ))}
    </nav>

    <div class="hidden sm:flex items-center gap-2">
      <a
        href="https://wa.me/549XXXXXXXXXX"
        target="_blank"
        rel="noopener noreferrer"
        class="btn btn-outline"
      >
        WhatsApp
      </a>
      <a href="/contacto" class="btn btn-primary shadow-md">
        Coordinar visita
      </a>
    </div>

    <!-- Mobile simple CTA -->
    <a href="/contacto" class="btn btn-primary sm:hidden">
      Consultar
    </a>
  </div>
</header>